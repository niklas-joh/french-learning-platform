{
  "name": "french-learning-platform",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm --prefix server run clean && npm --prefix server run build && npm --prefix client run build",
    "start": "node server/dist/app.js",
    "set-admin": "npx ts-node --project server/tsconfig.json scripts/set_admin_user.ts",
    "populate:content": "npx ts-node --project server/tsconfig.json scripts/populate_content.ts",
    "migrate": "npx ts-node --project server/tsconfig.json scripts/run-migration.ts",
    "db:status": "npm --prefix server run db:status",
    "db:reset": "rimraf database/french_learning.db database/test.sqlite3",
    "db:seed": "npm --prefix server run db:seed",
    "db:setup": "run-s db:rebuild migrate db:seed db:status",
    "db:rebuild": "run-s db:reset",
    "docs:setup": "mkdir -p docs/auto-generated/schema docs/auto-generated/api docs/auto-generated/complexity docs/auto-generated/architecture docs/auto-generated/guides docs/auto-generated/reports",
    "docs:schema": "node scripts/documentation/generate-schema-docs.js",
    "docs:migrations": "node scripts/documentation/document-migrations.js",
    "docs:code-analysis": "plato -r -d docs/auto-generated/complexity server/src/",
    "docs:dependencies": "madge --image docs/auto-generated/architecture/dependencies.svg server/src/",
    "docs:api": "jsdoc server/src/ -r -d docs/auto-generated/api -c scripts/documentation/jsdoc.json",
    "docs:structure": "tree -I 'node_modules|docs' -o docs/auto-generated/reports/project-structure.txt",
    "docs:dev-guide": "node scripts/documentation/generate-dev-guide.js",
    "docs:patterns": "node scripts/documentation/analyze-code-patterns.js",
    "docs:readme-ai": "readmeai --repository . --output README-GENERATED.md",
    "docs:dbml": "sqlite-utils schema database.sqlite | dbml2sql > docs/auto-generated/schema/schema.dbml",
    "docs:validate": "node scripts/automation/setup-validation.js",
    "docs:all": "npm run docs:setup && npm run docs:schema && npm run docs:migrations && npm run docs:code-analysis && npm run docs:dependencies && npm run docs:api && npm run docs:structure && npm run docs:dev-guide && npm run docs:patterns",
    "docs:serve": "npx http-server docs/auto-generated -p 8080 -o",
    "docs:clean": "rm -rf docs/auto-generated && npm run docs:setup",
    "docs:install-tools": "scripts/automation/install-doc-tools.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.10.0",
    "bullmq": "^5.56.0",
    "ioredis": "^5.6.1",
    "react-router-dom": "^7.6.2",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "knex": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.5",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.10",
    "jsdoc": "^4.0.2",
    "better-docs": "^2.7.2",
    "madge": "^6.1.0",
    "plato": "^1.7.0",
    "markdown-table": "^3.0.3",
    "tree-cli": "^0.6.7",
    "readme-md-generator": "^1.0.0",
    "documentation": "^14.0.2",
    "knex-schema-inspector": "^3.0.1",
    "@dbml/cli": "^2.5.1",
    "@mermaid-js/mermaid-cli": "^10.6.1"
  }
}
