{
  "name": "french-learning-platform",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm --prefix server run clean && npm --prefix server run build && npm --prefix client run build",
    "start": "node server/dist/app.js",
    "set-admin": "npx ts-node --project server/tsconfig.json scripts/set_admin_user.ts",
    "populate:content": "npx ts-node --project server/tsconfig.json scripts/populate_content.ts",
    "migrate": "npx ts-node --project server/tsconfig.json scripts/run-migration.ts",
    "db:status": "npm --prefix server run db:status",
    "db:reset": "rimraf database/french_learning.db database/test.sqlite3",
    "db:seed": "npm --prefix server run db:seed",
    "db:setup": "run-s db:rebuild migrate db:seed db:status",
    "db:rebuild": "run-s db:reset",
    "doc": "npm-run-all doc:schema doc:api doc:patterns",
    "doc:schema": "node ./node_modules/knexer/src/knexer.js --client sqlite3 --connection database/french_learning.db --output docs/auto-generated/schema.png",
    "doc:api": "npm run --prefix server doc:api",
    "doc:patterns": "semgrep --config .semgrep.yml --json > docs/auto-generated/patterns.json",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "client",
    "server"
  ],
  "dependencies": {
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.10.0",
    "bullmq": "^5.56.0",
    "ioredis": "^5.6.1",
    "react-router-dom": "^7.6.2",
    "sqlite3": "^5.1.7",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "husky": "^9.1.7",
    "knex": "^3.1.0",
    "knexer": "^0.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.5",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.10"
  }
}
